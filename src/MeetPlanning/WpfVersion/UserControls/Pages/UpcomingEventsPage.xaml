<UserControl x:Class="MeetPlanning.WpfVersion.UserControls.UpcomingEventsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MeetPlanning.WpfVersion"
        xmlns:uc="clr-namespace:MeetPlanning.WpfVersion.UserControls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="300" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Upcoming Events" FontSize="18" HorizontalAlignment="Center" />
        
        <Grid Grid.Row="1" Background="Gray" Margin="5,5,5,5">
        </Grid>

        <Button Grid.Row="2" Content="Show all" Width="125" HorizontalAlignment="Right" Margin="0,0,5,0" />
    </Grid>
</UserControl>
