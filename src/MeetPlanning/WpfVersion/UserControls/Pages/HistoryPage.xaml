<UserControl x:Class="MeetPlanning.WpfVersion.UserControls.HistoryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MeetPlanning.WpfVersion"
        xmlns:uc="clr-namespace:MeetPlanning.WpfVersion.UserControls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="25" />
            <RowDefinition Height="275" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Communication History" FontSize="18" HorizontalAlignment="Center" />
               
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Name:" />
            <TextBox Name="PartnerNameTextBox" Width="150" />
            <Label Content="Birth date:" />
            <TextBox Name="BrithDateTextBox" Width="150" />
            <Label Content="Nationality:" />
            <TextBox Name="NationalityTextBox" Width="150" />
            <Label Content="Gender:" />
            <TextBox Name="GenderTextBox" Width="150" />
        </StackPanel>

        <Grid Grid.Row="2" Background="Gray" Margin="5,5,5,5">
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0">
            <Button Content="Find" Width="100" />
            <Button Content="Clear" Width="100" Margin="5,0" />
        </StackPanel>
        
        <Button Grid.Row="3" Content="Show all" Width="125" HorizontalAlignment="Right" Margin="0,0,5,0" />
    </Grid>
</UserControl>
