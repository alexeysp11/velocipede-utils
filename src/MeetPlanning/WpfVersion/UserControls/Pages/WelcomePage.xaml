<UserControl x:Class="MeetPlanning.WpfVersion.UserControls.WelcomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MeetPlanning.WpfVersion"
        xmlns:uc="clr-namespace:MeetPlanning.WpfVersion.UserControls">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,100">
        <Label Content="Welcome!" FontSize="18" HorizontalAlignment="Center" />
        <Label Content="Join now to manage your meetings" FontSize="16" HorizontalAlignment="Center" />

        <Button Name="LoginBtn" Content="Log In" Width="150" Height="25" Margin="0,5"
            Click="LoginBtn_Click" />
        <Button Name="CreateAccountBtn" Content="Create account" Width="150" Height="25"
            Click="CreateAccountBtn_Click" />
    </StackPanel>
</UserControl>
