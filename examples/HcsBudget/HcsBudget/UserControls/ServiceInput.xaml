<UserControl x:Class="VelocipedeUtils.Examples.HcsBudget.UserControls.ServiceInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VelocipedeUtils.Examples.HcsBudget"
        xmlns:uc="clr-namespace:VelocipedeUtils.Examples.HcsBudget.UserControls"
        xmlns:vm="clr-namespace:VelocipedeUtils.Examples.HcsBudget.ViewModels">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Name="lblService" Content="Service:" Width="110" 
                        Margin="5,0,0,0" />
                <TextBox Name="tbService" Width="175" Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Name="lblQuantity" Content="Quantity:" Width="110" 
                        Margin="5,5,0,0" />
                <TextBox Name="tbQuantity" Width="175" Margin="5,5,0,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Name="lblPrice" Content="Price:" Width="110" 
                        Margin="5,5,0,0" />
                <TextBox Name="tbPrice" Width="140" Margin="5,5,0,0" />
                <Label Name="lblCurrency" Content="USD" Width="35" 
                        Margin="0,5,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
