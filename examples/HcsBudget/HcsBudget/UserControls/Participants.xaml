<UserControl x:Class="VelocipedeUtils.Examples.HcsBudget.UserControls.Participants"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VelocipedeUtils.Examples.HcsBudget"
        xmlns:uc="clr-namespace:VelocipedeUtils.Examples.HcsBudget.UserControls">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5,5,5,5">
            <Label Content="Participants" />
            <Grid>
                <TreeView Name="tvParticipants" Height="75" Width="295" 
                        SelectedItemChanged="SelectionChanged" />
            </Grid>
            <TextBox Name="tbParticipants" Width="295" Height="25" Margin="0,5,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Name="AddBtn" Content="Add" Width="95" Height="25"
                        Click="AddBtn_Clicked" />
                <Button Name="EditBtn" Content="Edit" Width="95" Height="25" 
                        Margin="5,0,0,0" Click="EditBtn_Clicked" />
                <Button Name="DeleteBtn" Content="Delete" Width="95" Height="25" 
                        Margin="5,0,0,0" Click="DeleteBtn_Clicked" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
