<UserControl x:Class="MeetPlanning.WpfVersion.UserControls.DbComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MeetPlanning.WpfVersion"
        xmlns:uc="clr-namespace:MeetPlanning.WpfVersion.UserControls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <Label Content="Database:" Grid.Column="0" />
        <ComboBox Name="DatabaseComboBox" Foreground="Black" Grid.Column="1">
            <ComboBoxItem Name="DatabaseComboBoxItem_Local">Local</ComboBoxItem>
            <ComboBoxItem Name="DatabaseComboBoxItem_Server">Server</ComboBoxItem>
            <ComboBoxItem Name="DatabaseComboBoxItem_LocalServer">Local and server</ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
